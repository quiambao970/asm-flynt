{# Components/SiteHeader/index.twig #}

<a href="#main-content" class="skip-link">Skip to main content</a>
<div class="header-wrapper">
  <section class="asm-pre-head">
    <div class="asm-pre-head-row">
      <div class="asm-pre-head-phone">
      {% for phone in phoneNumbers %}
        <a href="{{ phone.url }}" aria-label="{{ phone.label }} {{ phone.number }}">
          <span>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
          </span>
          {{ phone.label }} {{ phone.number }}
        </a>
      {% endfor %}
    </div>
      <div class="asm-pre-head-right">
        <nav class="asm-pre-head-nav">
          <ul>
            {% for item in pre_header_menu.items %}
              <li class="{{ item.classes|join(' ') }}">
                <a href="{{ item.link }}">{{ item.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </nav>
        <div class="asm-pre-head-social">
          <ul>
            <li>
              <a href="{{ facebook_url }}" class="asm-pre-head-social-facebook" aria-label="Facebook">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                </svg>
              </a>
            </li>
            <li>
              <a href="{{ pinterest_url }}" class="asm-pre-head-social-pinterest" aria-label="Pinterest">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="8" y1="21" x2="16" y2="21"></line>
                  <line x1="12" y1="17" x2="12" y2="21"></line>
                  <path d="M20.2 8.9c.5 1.6.8 3.3.8 5.1 0 1.6-.3 3.1-.8 4.5"></path>
                  <path d="M16 4.8c1 .5 1.9 1.1 2.7 1.7"></path>
                  <path d="M7.3 4.8c1-.5 1.9-1.1 2.7-1.7"></path>
                  <path d="M3.8 8.9c-.5 1.6-.8 3.3-.8 5.1 0 1.6.3 3.1.8 4.5"></path>
                  <path d="M16 18.8c-1 .5-1.9 1.1-2.7 1.7"></path>
                  <path d="M7.3 18.8c-1-.5-1.9-1.1-2.7-1.7"></path>
                </svg>
              </a>
            </li>
            <li>
              <a href="{{ instagram_url }}" class="asm-pre-head-social-instagram" aria-label="Instagram">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                </svg>
              </a>
            </li>
            <li>
              <a href="{{ youtube_url }}" class="asm-pre-head-social-youtube" aria-label="YouTube">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"></path>
                  <polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"></polygon>
                </svg>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <header class="asm-head">
    <div class="asm-head-logo">
      <a href="{{ site.link|e('esc_url') }}">
        <img width="96" height="49" src="{{ logo.src }}" fetchpriority="high" alt="{{ logo.alt }}">
      </a>
    </div>
    <div class="asm-container">
      <nav class="asm-head-nav">
        <ul>
          {% for item in menu.items %}
            <li class="{{ item.classes|join(' ') }}">
              <a href="{{ item.link }}">{{ item.title }}
                {% if item.children %}
                  <div class="asm-head-nav-down-arrow">
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <polyline points="6 9 12 15 18 9"></polyline>
                    </svg>
                  </div>
                {% endif %}
              </a>
              {% if item.children %}
                <div class="asm-head-nav-sub">
                  <ul>
                    {% for subitem in item.children %}
                      <li class="{{ subitem.classes|join(' ') }}">
                        <a href="{{ subitem.link }}">{{ subitem.title }}
                          {% if subitem.children %}
                            <div class="asm-head-nav-right-arrow">
                              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <polyline points="9 6 15 12 9 18"></polyline>
                              </svg>
                            </div>
                          {% endif %}
                        </a>
                        {% if subitem.children %}
                          <div class="asm-head-nav-sub-sub">
                            <ul>
                              {% for subsubitem in subitem.children %}
                                <li class="{{ subsubitem.classes|join(' ') }}">
                                  <a href="{{ subsubitem.link }}">{{ subsubitem.title }}</a>
                                </li>
                              {% endfor %}
                            </ul>
                          </div>
                        {% endif %}
                      </li>
                    {% endfor %}
                  </ul>
                </div>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      </nav>
    </div>
    <div class="asm-head-bbb">
      <a target="_blank" href="https://www.bbb.org/us/tx/houston/profile/internet-marketing-services/actual-seo-media-inc-0915-90045053" rel="nofollow">
        <img width="91" height="34" src="{{ bbb.src }}" fetchpriority="high" alt="{{ bbb.alt }}">
      </a>
    </div>

    <!-- Mobile menu toggle button -->
    <button class="mobile-menu-toggle" aria-label="Toggle mobile menu">
      <div class="hamburger">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </button>
  </header>
</div>

<!-- Mobile Menu -->
<!-- Mobile Menu - Pre-rendered but hidden on desktop -->
<div class="mobile-menu" inert>
  <button class="mobile-menu-close" aria-label="Close mobile menu">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <line x1="18" y1="6" x2="6" y2="18"></line>
      <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
  </button>

  <div id="mobile-menu-content">
    <!-- Main Menu Items -->
    {% for item in menu.items %}
      <div class="mobile-nav-item">
        {% if item.children %}
          <a href="#" class="mobile-nav-link has-dropdown" data-toggle="dropdown">
            {{ item.title }}
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </a>
          <div class="mobile-dropdown-menu">
            {% for subitem in item.children %}
              <a href="{{ subitem.link }}" class="mobile-dropdown-item">{{ subitem.title }}</a>
            {% endfor %}
          </div>
        {% else %}
          <a href="{{ item.link }}" class="mobile-nav-link">{{ item.title }}</a>
        {% endif %}
      </div>
    {% endfor %}

    <!-- Pre-header Menu Items -->
    {% if pre_header_menu.items %}
      <div class="mobile-menu-divider"></div>
      {% for item in pre_header_menu.items %}
        <div class="mobile-nav-item">
          <a href="{{ item.link }}" class="mobile-nav-link">{{ item.title }}</a>
        </div>
      {% endfor %}
    {% endif %}

    <!-- Phone Numbers at Bottom -->
    <div class="mobile-menu-divider"></div>
    <div class="mobile-section-heading">Contact Us</div>
    <div class="mobile-menu-contact">
      {% for phone in phoneNumbers %}
        <a href="{{ phone.url }}" aria-label="{{ phone.label }} {{ phone.number }}">
          <span>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
          </span>
          {{ phone.label }} {{ phone.number }}
        </a>
      {% endfor %}
    </div>
  </div>
</div>

<div class="overlay" inert></div>
