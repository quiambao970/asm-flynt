<section class="ecocart-faq ecocart-faq--{{ background_color }}">
    <div class="container">
        {% if has_dot_background %}
            <div class="ecocart-faq__dot-img">
                <img
                    class="lazyload"
                    data-src="{{ dot }}"
                    data-sizes="auto"
                    alt="dot image"
                />
            </div>
        {% endif %}
        <div class="dot-title">
            <h3>{{ pre_title }}</h3>
        </div>
        <div class="ecocart-faq__list">
            {% for faq in faq_list %}
                <div class="ecocart-faq__item {% if background_color == 'white' %}ecocart-faq__item--white{% endif %}">
                    <div class="ecocart-faq__item-title {% if background_color == 'white' %}ecocart-faq__item-title--white{% endif %}">{{ faq.title }}</div>
                    <div class="ecocart-faq__item-content {% if background_color == 'white' %}ecocart-faq__item-content--white{% endif %}" style="display: none;">
                        {{ faq.content|apply_filters('the_content') }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>